{
  "openapi" : "3.0.0",
  "servers" : [ {
    "description" : "Expense Reporter Sample API",
    "url" : "https://virtserver.swaggerhub.com/sho7650/ExpenseMockServices/0.5.0"
  } ],
  "info" : {
    "description" : "シェルスクリプトマガジン用サンプル",
    "version" : "0.5.0",
    "title" : "Expense API",
    "contact" : {
      "email" : "sho@oshiire.to"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags" : [ {
    "name" : "users",
    "description" : "一般利用者"
  }, {
    "name" : "approvers",
    "description" : "承認者"
  } ],
  "paths" : {
    "/login" : {
      "post" : {
        "tags" : [ "users", "approvers" ],
        "summary" : "ユーザー認証",
        "operationId" : "login",
        "description" : "ユーザーがログインしてJWTトークンを取得する\n",
        "parameters" : [ {
          "in" : "query",
          "name" : "email",
          "required" : true,
          "description" : "認証用Eメールアドレス",
          "schema" : {
            "$ref" : "#/components/schemas/email"
          }
        }, {
          "in" : "query",
          "name" : "hash",
          "required" : true,
          "description" : "認証パスワード",
          "schema" : {
            "$ref" : "#/components/schemas/hash"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SuccessToken"
                }
              }
            }
          },
          "401" : {
            "description" : "Authorization Required"
          }
        }
      }
    },
    "/expense" : {
      "post" : {
        "tags" : [ "users", "approvers" ],
        "summary" : "請求",
        "operationId" : "submitExpense",
        "description" : "利用者が1件の請求の申請を行う\n",
        "security" : [ {
          "bearerAuth" : [ ]
        } ],
        "parameters" : [ {
          "in" : "query",
          "name" : "user_id",
          "required" : true,
          "description" : "請求者ID",
          "schema" : {
            "$ref" : "#/components/schemas/user_id"
          }
        }, {
          "in" : "query",
          "name" : "user_name",
          "required" : false,
          "description" : "請求者氏名",
          "schema" : {
            "$ref" : "#/components/schemas/user_name"
          }
        }, {
          "in" : "query",
          "name" : "date",
          "required" : true,
          "description" : "請求発生日時",
          "schema" : {
            "$ref" : "#/components/schemas/date"
          }
        }, {
          "in" : "query",
          "name" : "type",
          "required" : true,
          "description" : "請求項目",
          "schema" : {
            "$ref" : "#/components/schemas/type"
          }
        }, {
          "in" : "query",
          "name" : "description",
          "required" : false,
          "description" : "請求内容詳細",
          "schema" : {
            "$ref" : "#/components/schemas/description"
          }
        }, {
          "in" : "query",
          "name" : "amount",
          "required" : true,
          "description" : "請求金額",
          "schema" : {
            "$ref" : "#/components/schemas/amount"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ExpenseItem"
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          }
        }
      }
    },
    "/payment" : {
      "get" : {
        "tags" : [ "approvers" ],
        "summary" : "支払い待ち一覧",
        "operationId" : "findPayments",
        "description" : "一般利用者からの請求一覧を表示\n",
        "security" : [ {
          "bearerAuth" : [ ]
        } ],
        "parameters" : [ {
          "in" : "query",
          "name" : "limit",
          "description" : "返却するレコードの最大数",
          "schema" : {
            "type" : "integer",
            "format" : "int32",
            "minimum" : 1,
            "maximum" : 50
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/ExpenseItem"
                  }
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          }
        }
      }
    }
  },
  "components" : {
    "securitySchemes" : {
      "bearerAuth" : {
        "type" : "http",
        "scheme" : "bearer",
        "bearerFormat" : "JWT"
      }
    },
    "schemas" : {
      "id" : {
        "type" : "integer",
        "format" : "int32",
        "example" : 120
      },
      "user_id" : {
        "type" : "string",
        "format" : "uuid",
        "example" : "d290f1ee-6c54-4b01-90e6-d701748f0851"
      },
      "first_name" : {
        "type" : "string",
        "example" : "しょう"
      },
      "last_name" : {
        "type" : "string",
        "example" : "きさらぎ"
      },
      "email" : {
        "type" : "string",
        "example" : "sho@oshiire.to"
      },
      "hash" : {
        "type" : "string",
        "format" : "password"
      },
      "user_name" : {
        "type" : "string",
        "example" : "しょっさん"
      },
      "date" : {
        "type" : "string",
        "format" : "date-time",
        "example" : "2020-03-29T09:12:33.001Z"
      },
      "type" : {
        "type" : "string",
        "example" : "交通費"
      },
      "amount" : {
        "type" : "integer",
        "format" : "int32",
        "example" : 520
      },
      "description" : {
        "type" : "string",
        "example" : "池袋/東京"
      },
      "created_at" : {
        "type" : "string",
        "format" : "date-time",
        "example" : "2020-04-01T13:04:12.001Z"
      },
      "updated_at" : {
        "type" : "string",
        "format" : "date-time",
        "example" : "2020-04-02T10:42:54.001Z"
      },
      "deleted_at" : {
        "type" : "string",
        "format" : "date-time",
        "example" : "2020-04-04T17:51:03.001Z"
      },
      "token" : {
        "type" : "string",
        "example" : "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwiaWQiOiI0MzA1QkNCNi0yOUFELTQzOEEtQjA2OC00MzU5MTZBRUU1QUEiLCJib3NzX2lkIjoiRTc5RkY5NTgtOTRGQy00OUVCLUI3RjYtNTdDMzJDMjY5QzI3IiwiZmlyc3RfbmFtZSI6IuOBl-OCh-OBhiIsImxhc3RfbmFtZSI6IuOBjeOBleOCieOBjiIsImVtYWlsIjoic2hvQG9zaGlpcmUudG8iLCJpYXQiOjE1MTYyMzkwMjJ9.Ne-6UQmOmhEMwvxt0OJYcC0bSSuKznnvhCnT2thmH8I\n"
      },
      "SuccessToken" : {
        "type" : "object",
        "required" : [ "token" ],
        "properties" : {
          "token" : {
            "$ref" : "#/components/schemas/token"
          }
        }
      },
      "ExpenseItem" : {
        "type" : "object",
        "required" : [ "id", "user_id", "date", "type", "amount", "created_at", "updated_at" ],
        "properties" : {
          "id" : {
            "$ref" : "#/components/schemas/id"
          },
          "user_id" : {
            "$ref" : "#/components/schemas/user_id"
          },
          "user_name" : {
            "$ref" : "#/components/schemas/user_name"
          },
          "date" : {
            "$ref" : "#/components/schemas/date"
          },
          "type" : {
            "$ref" : "#/components/schemas/type"
          },
          "amount" : {
            "$ref" : "#/components/schemas/amount"
          },
          "description" : {
            "$ref" : "#/components/schemas/description"
          },
          "created_at" : {
            "$ref" : "#/components/schemas/created_at"
          },
          "updated_at" : {
            "$ref" : "#/components/schemas/updated_at"
          }
        }
      }
    }
  }
}